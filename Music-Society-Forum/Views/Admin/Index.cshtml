@model IEnumerable<Music_Society_Forum.Models.Post>
    
@using Music_Society_Forum.Classes;

@{
    ViewBag.Title = "Admin Home";
}

@*Reviews*@
<h2 class="view-header">Reviews in current month (@Model.Count())</h2>
<p>
    @Html.ActionLink("See All Reviews", "Posts")
</p>

@if (Model.Count() == 0)
{
    <div>No reviews were submitted recently.</div>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            @*<th>Content</th>*@
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Comments)</th>
            <th>Actions</th>
        </tr>

    @foreach (var post in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => post.Title)
            </td>
            @*<td>
                @Html.Raw(Utils.CutText(post.Body, 100))
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => post.Date)
            </td>
            <td>
                @if (post.Author != null)
                {
                    if (post.Author.FullName != null)
                    {
                        @Html.DisplayFor(modelItem => post.Author.FullName)
                        @:(@Html.DisplayFor(modelItem => post.Author.UserName))
                }
                    else
                    {
                        @Html.DisplayFor(modelItem => post.Author.UserName)
                    }
                }
                else
                {
                    <i>Undisclosed author</i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.Comments.Count)
            </td>
            <td>
                @Html.ActionLink("Details", "../Posts/Details", new { id = post.Id }) |                
                @Html.ActionLink("Edit", "../Posts/Edit", new { id = post.Id }) | 
                @Html.ActionLink("Delete", "../Posts/Delete", new { id = post.Id })                
            </td>
        </tr>
    }

    </table>
}

@*Comments*@
<h2 class="view-header">Comments in current month (@ViewBag.Comments.Count)</h2>
<p>
    @Html.ActionLink("See All Comments", "Comments")
</p>
@if (ViewBag.Comments.Count > 0)
{
    <table class="table">
        <tr>
            <th>On</th>
            @*<th>Comment</th>*@
            <th>Date</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>

        @foreach (var comment in ViewBag.Comments)
        {
            <tr>
                <td>
                    @comment.Post.Title
                </td>
                @*<td>
                    @Html.Raw(Utils.CutText(comment.Text, 100))
                </td>*@
                <td>
                    @comment.Date
                </td>
                <td>
                    @if (comment.Author != null)
                    {
                        if (comment.Author.FullName != null)
                        {
                            @comment.Author.FullName @:(@comment.Author.UserName)
                        }
                        else
                        {
                            @comment.Author.UserName
                        }
                    }
                    else
                    {
                        <i>Undisclosed author</i>
                    }
                </td>        
                <td>
                    @Html.ActionLink("Details", "../Comments/Details", new { id = comment.Id }) |
                    @Html.ActionLink("Edit", "../Comments/Edit", new { id = comment.Id }) |
                    @Html.ActionLink("Delete", "../Comments/Delete", new { id = comment.Id })                    
                </td>
            </tr>
        }

    </table>
}
else
{
    <div>No reviews were submitted recently.</div>
}