@model Music_Society_Forum.Models.Comment

@{
    ViewBag.Title = "Delete";
}

<h2 class="view-header">Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>On</dt>
        <dd>
            @ViewBag.CommentedPost.Title
        </dd>

        <dt>Comment</dt>
        <dd>
            @Html.Raw(Model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Author
        </dt>
        <dd>
            @if (ViewBag.CommentAuthor != null)
            {
                @ViewBag.CommentAuthor.FullName @:(@ViewBag.CommentAuthor.UserName)
            }
            else
            {
                <i>Undisclosed author</i>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index") |
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
